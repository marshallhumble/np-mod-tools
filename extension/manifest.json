{
  "manifest_version": 2,
  "name": "NP Mod Helper",
  "description": "A browser extension for expediting moderation in the NeutralVerse.",
  "version": "1.6.2",
  "permissions": [
    "https://*.reddit.com/",
    "http://*.reddit.com/",
    "identity",
    "storage"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://*.reddit.com/*", "http://*.reddit.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "128": "icon_128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/vitosamson/np-mod-tools/master/updates.json"
    }
  }
}
